<Window x:Class="Kinect_DepthData_ComValores_AgoraVai_NetFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_DepthData_ComValores_AgoraVai_NetFramework"
        mc:Ignorable="d"
        Title="Kinect - DepthData com valores" Height="900" Width="1200">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="PixelDepth" FontSize="48" HorizontalAlignment="Left"></TextBlock>
            <Image x:Name="DepthImage" Width="640" Height="480" MouseLeftButtonDown="DepthImage_MouseLeftButtonUp"/>
            <Button Width="100" Height="18" x:Name="Button_SalvarNuvem" Click="Button_SalvarNuvem_OnClick" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10">Salvar Nuvem</Button>
            <TextBox x:Name="Dados"></TextBox>
        </StackPanel>
    </Grid>
</Window>
